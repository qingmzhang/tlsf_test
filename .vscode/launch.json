{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug tlsf-test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_tlsf", // 指向构建生成的测试可执行文件路径
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}